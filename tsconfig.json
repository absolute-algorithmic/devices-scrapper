{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "rootDir": "./src",  
    "sourceMap": true,
    "outDir": "./build", 
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,              
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}